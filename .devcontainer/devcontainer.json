{
    "name": "Debian",
    "image": "mcr.microsoft.com/devcontainers/base:bullseye",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {},
        "ghcr.io/devcontainers/features/rust:1": {}
    },
    "customizations": {
      "vscode": {
        "extensions": ["svelte.svelte-vscode", "tauri-apps.tauri-vscode"]
      }
    },
    "initializeCommand": "echo 'Initializing dev container...'",
    "onCreateCommand": "sudo apt update && sudo apt install -y  openssh-server libwebkit2gtk-4.0-dev build-essential curl wget file libssl-dev libgtk-3-dev libayatana-appindicator3-dev librsvg2-dev && echo 'Post create setup complete.'",
    "updateContentCommand": "echo 'Updating content...'",
    "postCreateCommand": "echo 'Docker image built successfully.'",
    "postStartCommand": "echo 'Container successfully started.'",
    "postAttachCommand": "echo 'Tool attached to container.'",
    "waitFor": "updateContentCommand",
    "mounts": [],
	  "runArgs": [
        "--net", "host", 
        "-e", "DISPLAY=${env:DISPLAY}",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix"
	],
}
